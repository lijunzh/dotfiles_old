{
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		},
		"dockerfile": {
			"command": "docker-langserver",
			"filetypes": ["dockerfile"],
			"args": ["--stdio"]
		}
	},
	"python.linting.enabled": true,
	"python.linting.mypyEnabled": true,
	"python.linting.pylintEnabled": false,
	"python.formatting.provider": "black"
}
